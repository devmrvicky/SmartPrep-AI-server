{
  "info": {
    "name": "Authentication API",
    "description": "Production-level authentication system with OTP verification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Send OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/send-otp",
          "host": ["{{baseUrl}}"],
          "path": ["send-otp"]
        },
        "description": "Send OTP to user's email for verification"
      }
    },
    {
      "name": "2. Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["verify-otp"]
        },
        "description": "Verify the OTP sent to email"
      }
    },
    {
      "name": "3. Complete Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullname\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"confirmPassword\": \"SecurePass123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/complete-registration",
          "host": ["{{baseUrl}}"],
          "path": ["complete-registration"]
        },
        "description": "Complete registration with password after OTP verification"
      }
    },
    {
      "name": "4. Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": ["{{baseUrl}}"],
          "path": ["login"]
        },
        "description": "Login with email and password"
      }
    },
    {
      "name": "5. Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/profile",
          "host": ["{{baseUrl}}"],
          "path": ["profile"]
        },
        "description": "Get current user profile (protected route)"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/auth"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
